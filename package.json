{
  "name": "@zhangjicheng/scroller",
  "version": "1.1.0",
  "description": "A scrolling plug-in",
  "author": "zhangjicheng",
  "license": "ISC",
  "main": "lib/main.cjs.js",
  "module": "lib/main.esm.js",
  "umd:main": "lib/main.umd.js",
  "jsnext:main": "lib/main.esm.js",
  "typings": "lib/src/main.d.ts",
  "private": false,
  "access": "public",
  "scripts": {
    "start": "rollup -c rollup.config.ts --configPlugin typescript",
