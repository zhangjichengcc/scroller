{
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES6",
    "sourceMap": true, // 调试 ts 源码 
    "allowJs": true, 
    // "experimentalDecorators": true, 去除js装饰器警告
    "esModuleInterop": true, // 允许export=导出，由import from 导入
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",  
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "./src"
  ]
}
